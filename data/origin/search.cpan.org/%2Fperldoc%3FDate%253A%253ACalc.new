<pre class="sh_perl">  use Date::Calc qw( Date_to_Days );

  $lower = Date_to_Days($year1,$month1,$day1);
  $upper = Date_to_Days($year2,$month2,$day2);

  $date = Date_to_Days($year,$month,$day);

  if (($date &#62;= $lower) &#38;&#38; ($date &#60;= $upper))
  {
      # ok
  }
